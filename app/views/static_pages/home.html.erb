<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Kame App</h1>
    <p>
      これはAkira Kameyamaのホームページです。</br>
      <a href="http://railstutorial.jp/">Ruby on Rails Tutorial</a>
      を参考にしました。
    </p>
    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("kame.gif", width: "150", alt: "Kameyama"), 'http://akame913.jimdo.com/' %>
<% end %>
