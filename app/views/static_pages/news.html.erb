<% provide(:title, 'News') %>
<div class="center hero-unit">
  <h1>News</h1>
  <% if @microposts.any? %>
    <ol class="microposts">
      <% @microposts.each do |micropost| %>
        <li>
          <span class="content"><%= micropost.content %></span>
          <span class="timestamp">
            Posted <%= time_ago_in_words(micropost.created_at) %> ago.
          </span>
        </li>
      <% end %>
    </ol>
    <%= will_paginate @microposts %>
  <% else %>
    <p>What's New!</p>
  <% end %>
</div>

