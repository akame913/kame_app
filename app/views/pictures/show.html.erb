<% provide(:title, @picture.name) %>
<div class="row" >
 <div class="span10 offset1">
  <h3><%= @picture.name %></h3>
  <img src="<%= picture_download_path(@picture) %>"/>
  <p>Tags:  <%= raw @picture.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
  <%= markdown(@picture.comment) %>
  <p>
    <% if signed_in? && current_user.admin? %>
      <%= link_to "Edit", edit_picture_path(@picture) %>
  <% end %>
  </p>
 </div>
</div>

